<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_background"
    >
    <TextView
        android:id="@+id/remind_insert_tv1"
        android:text="添加备忘"

        style="@style/R_tittle_tv"

        ></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remind_insert_tv1"

        >
        <TextView
            android:id="@+id/remind_insert_tv2"

            style="@style/R_datebox_tv"
            >
        </TextView>
        <EditText
            android:id="@+id/remind_insert_et1"
            android:layout_below="@id/remind_insert_tv2"
            style="@style/R_edittext_et"
            android:layout_width="match_parent"></EditText>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <ImageButton
                android:id="@+id/remind_insert_bt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/selector_btn_back"
                android:background="@android:color/transparent"
                android:layout_marginBottom="10dp"
                >
            </ImageButton>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>