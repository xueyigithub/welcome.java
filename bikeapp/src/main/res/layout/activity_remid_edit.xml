<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/about_background"
    >
    <TextView
        android:id="@+id/remind_edit_tv1"
        android:text="修改备忘"

        style="@style/R_tittle_tv"

        ></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remind_edit_tv1"

        >
        <TextView
            android:id="@+id/remind_edit_tv2"
            style="@style/R_datebox_tv"
            >
        </TextView>
        <EditText
            android:id="@+id/remind_edit_et1"
            android:layout_below="@id/remind_edit_tv2"
            style="@style/R_edittext_et"
            ></EditText>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/remind_edit_bt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/selector_btn_delect"
                android:background="@android:color/transparent"
                android:layout_marginBottom="10dp"
                >
            </ImageButton>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
